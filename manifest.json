{
    "manifest_version": 3,
    "name": "Multi-Lingual Input Tools",
    "description": "Quickly copy & paste accented letters and symbols from multiple different languages!",
    "version": "6.1",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Multi-Lingual Input Tools",
        "default_icon": {
            "16": "icons/16.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["main-styles.css"]
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "permissions": [
        "clipboardWrite",
        "storage"
    ]
}